{
  "name": "user-api",
  "version": "0.0.1",
  "description": "",
  "author": "Jo√£o Vitor Coelho",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "proto:generate": "protoc --ts_proto_out=. ./src/libs/protos/proto/*.proto --ts_proto_opt=nestJs=true --ts_proto_opt=fileSuffix=.pb",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "eslint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "eslint:fix": "yarn eslint:check -- --fix",
    "precommit": "lint-staged",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production'){process.exit(1)} \" || husky install",
    "prepush": "yarn test",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles --forceExit --config .jestrc.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest -i --forceExit --config jest-e2e.json",
    "test:all": "yarn test && yarn run test:e2e",
    "docker:env": "docker-compose --file docker-compose.yml up --build"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.12",
    "@grpc/proto-loader": "^0.7.5",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/graphql": "^10.2.0",
    "@nestjs/microservices": "^9.3.10",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cache-manager": "4.0.1",
    "cache-manager-redis-store": "2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "nestjs-request-context": "^2.1.0",
    "oxide.ts": "0.9.12",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "slonik": "^33.1.0",
    "ts-proto": "^1.143.0",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser-xml": "^2.0.2",
    "@types/cache-manager-redis-store": "^2.0.1",
    "@types/compression": "^1.7.2",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.3",
    "@types/faker": "^5.1.6",
    "@types/jest": "26.0.10",
    "@types/joi": "^14.3.4",
    "@types/node": "^16.0.0",
    "@types/speakeasy": "^2.0.7",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "29.3.1",
    "lint-staged": "^13.1.1",
    "prettier": "^2.3.2",
    "protoc-gen-ts": "^0.8.5",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "ts-protoc-gen": "^0.15.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
